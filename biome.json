{
  "$schema": "https://biomejs.dev/schemas/2.0.0/schema.json",
  "vcs": {
    "clientKind": "git",
    "defaultBranch": "main",
    "enabled": true,
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!**/build/**",
      "!**/dist/**",
      "!**/node_modules/**",
      "!**/*.d.ts",
      "!libs/**",
      "!docs/discord-api-docs/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "enabled": true,
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "quoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "correctness": {
        "noNodejsModules": "off",
        "noUndeclaredDependencies": "off"
      },
      "performance": {
        "noReExportAll": "off",
        "noBarrelFile": "off"
      },
      "suspicious": {
        "noExplicitAny": "warn"
      },
      "style": {
        "useAsConstAssertion": "error",
        "noUnusedTemplateLiteral": "error",
        "noInferrableTypes": "error",
        "noUselessElse": "error"
      }
    }
  },
  "overrides": [
    {
      "includes": ["**/apps/bot/**", "**/apps/benchmark/**", "**/scripts/**"],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          },
          "style": {
            "noDefaultExport": "off"
          }
        }
      }
    },
    {
      "includes": ["**/apps/web/**"],
      "linter": {
        "enabled": true,
        "rules": {
          "recommended": true,
          "correctness": {
            "noUnusedVariables": "warn",
            "noUnusedImports": "warn",
            "useExhaustiveDependencies": "warn",
            "useHookAtTopLevel": "error",
            "useValidTypeof": "error"
          },
          "style": {
            "noNegationElse": "warn",
            "noParameterAssign": "warn",
            "noRestrictedGlobals": "error",
            "useBlockStatements": "warn",
            "useCollapsedElseIf": "warn",
            "useConsistentArrayType": {
              "level": "warn",
              "fix": "safe",
              "options": {
                "syntax": "shorthand"
              }
            },
            "useConst": "warn",
            "useDefaultParameterLast": "warn",
            "useEnumInitializers": "warn",
            "useExponentiationOperator": "warn",
            "useFilenamingConvention": {
              "level": "warn",
              "options": {
                "strictCase": false,
                "requireAscii": true,
                "filenameCases": ["kebab-case", "camelCase", "PascalCase"]
              }
            },
            "useForOf": "warn",
            "useFragmentSyntax": "warn",
            "useNamingConvention": {
              "level": "warn",
              "options": {
                "strictCase": false,
                "conventions": [
                  {
                    "selector": {
                      "kind": "function"
                    },
                    "formats": ["camelCase", "PascalCase"]
                  },
                  {
                    "selector": {
                      "kind": "variable"
                    },
                    "formats": ["camelCase", "PascalCase", "CONSTANT_CASE"]
                  },
                  {
                    "selector": {
                      "kind": "typeLike"
                    },
                    "formats": ["PascalCase"]
                  }
                ]
              }
            },
            "useNodejsImportProtocol": "warn",
            "useNumberNamespace": "warn",
            "useSelfClosingElements": "warn",
            "useShorthandAssign": "warn",
            "useSingleVarDeclarator": "warn",
            "useTemplate": "warn",
            "useComponentExportOnlyModules": "warn",
            "useConsistentMemberAccessibility": "warn",
            "useTrimStartEnd": "warn"
          },
          "complexity": {
            "noBannedTypes": "warn",
            "noExtraBooleanCast": "warn",
            "noStaticOnlyClass": "warn",
            "noThisInStatic": "warn",
            "noUselessCatch": "warn",
            "noUselessConstructor": "warn",
            "noUselessEmptyExport": "warn",
            "noUselessFragments": "warn",
            "noUselessLabel": "warn",
            "noUselessLoneBlockStatements": "warn",
            "noUselessRename": "warn",
            "noUselessSwitchCase": "warn",
            "noUselessTernary": "warn",
            "noUselessThisAlias": "warn",
            "noUselessTypeConstraint": "warn",
            "noVoid": "warn",
            "useLiteralKeys": "warn",
            "useOptionalChain": "warn",
            "useRegexLiterals": "warn",
            "useNumericLiterals": "warn",
            "noAdjacentSpacesInRegex": "warn"
          },
          "security": {
            "noDangerouslySetInnerHtml": "warn",
            "noBlankTarget": "warn"
          },
          "performance": {
            "noAccumulatingSpread": "warn",
            "noDelete": "warn"
          },
          "a11y": {
            "noAriaUnsupportedElements": "warn",
            "noDistractingElements": "warn",
            "noHeaderScope": "warn",
            "noPositiveTabindex": "warn",
            "noRedundantAlt": "warn",
            "noRedundantRoles": "warn",
            "useAltText": "warn",
            "useAnchorContent": "warn",
            "useAriaActivedescendantWithTabindex": "warn",
            "useAriaPropsForRole": "warn",
            "useButtonType": "warn",
            "useHeadingContent": "warn",
            "useHtmlLang": "warn",
            "useIframeTitle": "warn",
            "useKeyWithClickEvents": "warn",
            "useKeyWithMouseEvents": "warn",
            "useMediaCaption": "warn",
            "useValidAnchor": "warn",
            "useValidAriaProps": "warn",
            "useValidAriaRole": "warn",
            "useValidAriaValues": "warn",
            "useValidLang": "warn"
          },
          "suspicious": {
            "noApproximativeNumericConstant": "warn",
            "noArrayIndexKey": "warn",
            "noAssignInExpressions": "warn",
            "noAsyncPromiseExecutor": "warn",
            "noCatchAssign": "warn",
            "noClassAssign": "warn",
            "noCommentText": "warn",
            "noCompareNegZero": "warn",
            "noControlCharactersInRegex": "warn",
            "noDebugger": "warn",
            "noDoubleEquals": "warn",
            "noDuplicateCase": "warn",
            "noDuplicateClassMembers": "warn",
            "noDuplicateJsxProps": "warn",
            "noDuplicateObjectKeys": "warn",
            "noDuplicateParameters": "warn",
            "noEmptyBlockStatements": "warn",
            "noExplicitAny": "warn",
            "noExtraNonNullAssertion": "warn",
            "noFallthroughSwitchClause": "warn",
            "noFunctionAssign": "error",
            "noGlobalAssign": "error",
            "noImplicitAnyLet": "warn",
            "noImportAssign": "error",
            "noLabelVar": "warn",
            "noMisleadingCharacterClass": "warn",
            "noMisleadingInstantiator": "warn",
            "noPrototypeBuiltins": "warn",
            "noRedeclare": "error",
            "noRedundantUseStrict": "warn",
            "noSelfCompare": "warn",
            "noShadowRestrictedNames": "error",
            "noUnsafeDeclarationMerging": "warn",
            "noUnsafeNegation": "warn",
            "useAwait": "warn",
            "useDefaultSwitchClauseLast": "warn",
            "useGetterReturn": "error",
            "useNamespaceKeyword": "warn",
            "noVar": "error",
            "noWith": "error",
            "noConsole": {
              "level": "warn",
              "options": {
                "allow": ["log"]
              }
            }
          },
          "nursery": {
            "useSortedClasses": {
              "level": "warn",
              "fix": "safe",
              "options": {
                "functions": ["clsx", "cva", "cn", "twMerge", "classNames"]
              }
            }
          }
        }
      }
    }
  ]
}
