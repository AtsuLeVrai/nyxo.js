{
  "$schema": "https://json.schemastore.org/package",
  "name": "@nyxojs/types",
  "homepage": "https://github.com/nyxo-labs/nyxo.js",
  "readme": "README.md",
  "license": "Apache-2.0",
  "type": "module",
  "files": [
    "dist"
  ],
