  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nyxo-labs/nyxo.js"
  },
  "bugs": {
    "url": "https://github.com/nyxo-labs/nyxo.js/issues"
  },
  "author": {
    "name": "AtsuLeVrai",
    "url": "https://github.com/AtsuLeVrai"
  },
  "scripts": {
    "dev": "tsc -p tsconfig.json",
    "build": "tsdown",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^24.6.2",
    "tsdown": "^0.15.6",
    "typescript": "^5.9.3"
  }
