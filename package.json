    "test:coverage": "vitest --coverage --run",
    "test:ui": "vitest --ui",
    "test:bench": "vitest bench --run",
    "prepare": "husky",
    "publish": "pnpm run build:prod && changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.29.4",
    "@vitest/coverage-v8": "^3.1.3",
    "@vitest/ui": "^3.1.3",
    "husky": "^9.1.7",
    "turbo": "^2.5.3",
    "vitest": "^3.1.3"
  }
}
