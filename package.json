    "@types/ws": "^8.18.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.1",
    "tsdown": "^0.15.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --unsafe --write"
    ]
  }
