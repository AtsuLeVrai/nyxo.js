  },
  "author": {
    "name": "AtsuLeVrai",
    "url": "https://github.com/AtsuLeVrai"
  },
  "scripts": {
    "biome:check": "biome check --unsafe --write",
    "build:dev": "tsc -p tsconfig.json",
    "build:prod": "tsdown",
