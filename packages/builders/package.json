{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@nyxojs/builders",
  "version": "0.3.0",
  "description": "Type-Safe Discord Component Builders with Fluent API",
  "keywords": [
    "discord",
    "builders",
    "components",
    "commands",
    "slash-commands",
    "embeds",
    "typescript",
    "type-safe",
    "discord-bot",
    "message-components",
    "interaction",
    "discord-api",
    "builder-pattern",
    "bot",
    "discord-builders",
    "action-row",
    "select-menu"
  ],
  "homepage": "https://github.com/AtsuLeVrai/nyxo.js/tree/main/packages/builders",
  "readme": "README.md",
  "license": "Apache-2.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=22"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AtsuLeVrai/nyxo.js",
    "directory": "packages/builders"
  },
  "bugs": {
    "url": "https://github.com/AtsuLeVrai/nyxo.js/issues"
  },
  "author": {
    "name": "AtsuLeVrai",
    "url": "https://github.com/AtsuLeVrai"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build:dev": "rimraf dist && tsc -p tsconfig.json",
    "build:prod": "tsdown",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@nyxojs/core": "workspace:^",
    "@nyxojs/rest": "workspace:^"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "rimraf": "^6.0.1",
    "tsdown": "^0.13.0",
    "typescript": "^5.8.3"
  }
}
