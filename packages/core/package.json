{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@nyxojs/core",
  "version": "0.1.0",
  "description": "Type-Safe Discord API Definitions and Utilities",
  "readme": "README.md",
  "license": "Apache-2.0",
  "type": "module",
  "files": ["dist"],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=22"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AtsuLeVrai/nyxo.js",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/AtsuLeVrai/nyxo.js/issues"
  },
  "author": {
    "name": "AtsuLeVrai",
    "url": "https://github.com/AtsuLeVrai"
  },
  "scripts": {
    "build:dev": "rimraf dist && tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json --preserveWatchOutput",
    "build:prod": "tsdown",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^22.15.29",
    "rimraf": "^6.0.1",
    "tsdown": "^0.12.7",
    "typescript": "^5.8.3"
  }
}
