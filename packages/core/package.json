{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@nyxojs/core",
  "version": "0.2.4",
  "description": "Type-Safe Discord API Definitions and Utilities",
  "keywords": [
    "discord",
    "api",
    "types",
    "typescript",
    "discord-api",
    "core",
    "entities",
    "definitions",
    "type-safe",
    "api-definitions",
    "snowflake",
    "permissions",
    "emoji",
    "utilities",
    "enums",
    "discord-types",
    "api-types",
    "bot",
    "discord-bot"
  ],
  "homepage": "https://github.com/AtsuLeVrai/nyxo.js/tree/main/packages/core",
  "readme": "README.md",
  "license": "Apache-2.0",
  "type": "module",
  "files": ["dist"],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=22"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AtsuLeVrai/nyxo.js",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/AtsuLeVrai/nyxo.js/issues"
  },
  "author": {
    "name": "AtsuLeVrai",
    "url": "https://github.com/AtsuLeVrai"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build:dev": "rimraf dist && tsc -p tsconfig.json",
    "build:prod": "tsdown",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^22.15.31",
    "rimraf": "^6.0.1",
    "tsdown": "^0.12.7",
    "typescript": "^5.8.3"
  }
}
