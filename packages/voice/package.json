{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@nyxojs/voice",
  "private": true,
  "version": "0.1.4",
  "description": "Enterprise-Grade Voice Communication for Discord Applications",
  "readme": "README.md",
  "license": "Apache-2.0",
  "type": "module",
  "files": ["dist"],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=22"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AtsuLeVrai/nyxo.js",
    "directory": "packages/voice"
  },
  "bugs": {
    "url": "https://github.com/AtsuLeVrai/nyxo.js/issues"
  },
  "author": {
    "name": "AtsuLeVrai",
    "url": "https://github.com/AtsuLeVrai"
  },
  "scripts": {
    "build:dev": "rimraf dist && tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json --preserveWatchOutput",
    "build:prod": "tsdown",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@discordjs/opus": "^0.10.0",
    "@noble/ciphers": "^1.3.0",
    "@noble/curves": "^1.9.2",
    "@noble/hashes": "^1.8.0",
    "@nyxojs/core": "workspace:^",
    "@nyxojs/gateway": "workspace:^",
    "@nyxojs/store": "workspace:^",
    "@stablelib/xchacha20poly1305": "^2.0.1",
    "eventemitter3": "^5.0.1",
    "ffmpeg-static": "^5.2.0",
    "prism-media": "^1.3.5",
    "ws": "^8.18.2",
    "zod": "^3.25.56"
  },
  "devDependencies": {
    "@types/node": "^22.15.30",
    "@types/ws": "^8.18.1",
    "rimraf": "^6.0.1",
    "tsdown": "^0.12.7",
    "typescript": "^5.8.3"
  }
}
