{
  "$schema": "./node_modules/turbo/schema.json",
  "ui": "tui",
  "globalDependencies": [".env", "tsconfig.json", "biome.json"],
  "tasks": {
    "//#biome:check": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["^start"],
      "outputs": [],
      "cache": false
    },
    "clean": {
      "dependsOn": ["^clean"],
      "outputs": [],
      "cache": false
    },
    "build:dev": {
      "dependsOn": ["//#biome:check", "^build:dev"],
      "outputs": ["dist/**"],
      "cache": true
    },
    "build:watch": {
      "outputs": ["dist/**"],
      "cache": false,
      "persistent": true
    },
    "build:native": {
      "dependsOn": ["//#biome:check", "^build:native"],
      "outputs": ["build/**"],
      "cache": true
    },
    "type-check": {
      "dependsOn": ["//#biome:check"],
      "outputs": [],
      "cache": true
    },
    "build:prod": {
      "dependsOn": ["//#biome:check", "^build:prod"],
      "outputs": ["dist/**"],
      "cache": true
    }
  }
}
